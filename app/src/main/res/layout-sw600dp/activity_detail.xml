<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/steps_overview_fragment"
        android:name="com.example.roman.bakingapp.ui.detail.StepsOverviewFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5" />

    <FrameLayout
        android:id="@+id/steps_details_fragment"
        android:name="com.example.roman.bakingapp.ui.detail.StepsDetailsFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" />
</LinearLayout>